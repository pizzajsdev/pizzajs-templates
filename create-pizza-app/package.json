{
  "name": "create-pizza-app",
  "version": "0.5.0",
  "description": "Create a new PizzaJS app",
  "homepage": "https://pizzajs.dev",
  "bugs": {
    "url": "https://github.com/pizzajsdev/pizzajs-templates/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pizzajsdev/pizzajs-templates",
    "directory": "create-pizza-app"
  },
  "license": "MIT",
  "type": "commonjs",
  "exports": {
    "./package.json": "./package.json"
  },
  "bin": {
    "create-pizza-app": "dist/cli.js"
  },
  "files": [
    "dist/",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "build": "wireit",
    "postbuild": "publint",
    "lint": "npm run typecheck",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@remix-run/web-fetch": "^4.4.2",
    "arg": "^5.0.2",
    "chalk": "^5.5.0",
    "execa": "9.6.0",
    "fs-extra": "^11.3.0",
    "gunzip-maybe": "^1.4.2",
    "log-update": "^6.1.0",
    "proxy-agent": "^6.5.0",
    "recursive-readdir": "^2.2.3",
    "semver": "^7.7.2",
    "sisteransi": "^1.0.5",
    "sort-package-json": "^3.4.0",
    "strip-ansi": "^7.1.0",
    "tar-fs": "^3.1.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/gunzip-maybe": "^1.4.2",
    "@types/recursive-readdir": "^2.2.4",
    "@types/semver": "^7.7.0",
    "@types/tar-fs": "^2.0.4",
    "esbuild": "0.25.8",
    "esbuild-register": "^3.6.0",
    "msw": "^2.10.4",
    "publint": "^0.3.12",
    "tiny-invariant": "^1.3.3",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "wireit": "0.14.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "wireit": {
    "build": {
      "command": "tsup",
      "files": [
        "*.ts",
        "tsconfig.json",
        "package.json"
      ],
      "output": [
        "dist/**"
      ]
    }
  }
}
